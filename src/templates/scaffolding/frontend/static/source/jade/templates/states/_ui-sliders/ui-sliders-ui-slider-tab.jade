        .form-group
            label.col-md-3.control-label Minimum
            .col-md-6
                p
                    label(for='amount') Minimum Value:
                    input#amount-min(type='text', style='border: 0; color: #f6931f; font-weight: bold;')
                #slider-range-min.slider
        .form-group
            label.col-md-3.control-label
                | Snap to
                | increments
            .col-md-6
                p
                    label(for='amount-snap')
                        | Donation amount ($50
                        | increments):
                    input#amount-snap(type='text', style='border: 0; color: #f6931f; font-weight: bold;')
                #slider-snap.slider
        .form-group
            label.col-md-3.control-label
                | Vertical
                | slider
            .col-md-6
                p
                    label(for='amount-vertical') Volume:
                    input#amount-vertical(type='text', style='border: 0; color: #f6931f; font-weight: bold;')
                #slider-vertical.slider(style='height: 200px;')
        .form-group.last
            label.col-md-3.control-label
                | Vertical range
                | slider
            .col-md-6
                p
                    label(for='amount-vertical-range')
                        | Target sales goal
                        | (Millions):
                    input#amount-vertical-range(type='text', style='border: 0; color: #f6931f; font-weight: bold;')
                #slider-vertical-range.slider(style='height: 200px;')
