form.form-horizontal.form-bordered(action='#')
    .form-body
        .form-group
            label.col-md-3.control-label Default
            .col-md-6
                #slider-default.slider
        .form-group
            label.col-md-3.control-label Range
            .col-md-6
                p
                    label(for='amount') Price range:
                    input#amount(type='text', style='border: 0; color: #f6931f; font-weight: bold;')
                #slider-range
        .form-group
            label.col-md-3.control-label
                | Multiple
                | sliders
            .col-md-6
                #slider-multi.slider
                    span 88
                    span 77
                    span 55
                    span 33
                    span 40
                    span 45
                    span 70
        .form-group
            label.col-md-3.control-label Maximum
            .col-md-6
                p
                    label(for='amount') Maximum Value:
                    input#amount-max(type='text', style='border: 0; color: #f6931f; font-weight: bold;')
